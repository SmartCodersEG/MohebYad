<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:padding="10dp"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:id="@+id/closetimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/timer_bg"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="13dp"
        android:paddingTop="4dp"
        android:paddingEnd="13dp"
        android:paddingBottom="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:text="@string/skip_ad"
            android:textColor="#000000"
            android:textSize="@dimen/text_size_12"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/textView123"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="10"
            android:textColor="#000000"
            android:textSize="@dimen/text_size_12"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/actbtns"
        android:layout_below="@+id/closetimer"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal">


        <androidx.cardview.widget.CardView
            android:layout_width="320dp"
            android:layout_height="127.06dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="6dp"
            app:cardElevation="0.5dp">


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/coverbg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/privacypolicy"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="25dp"
                android:layout_height="18dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/full_privacy_title_bg"
                android:contentDescription="@string/todo"
                android:gravity="center"
                android:padding="1dp"
                android:text="@string/ad"
                android:textColor="#fff"
                android:textSize="@dimen/text_size_8"
                tools:ignore="SmallSp,SpUsage"
                tools:targetApi="jelly_bean" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="88dp"
            android:layout_marginBottom="15dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="100dp"
            app:cardElevation="1dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/appiconbg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="89.2dp"
            android:layout_marginBottom="15dp"
            app:cardCornerRadius="100dp"
            app:cardElevation="1dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/appIcon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="centerInside" />
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/apptitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/appiconbg"
            android:layout_centerInParent="true"
            android:layout_marginTop="4dp"
            android:text="app name"
            android:textColor="#000000"
            android:textSize="@dimen/text_size_18" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/adText"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="45dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/apprating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/rating_bg"
                android:gravity="center"
                android:paddingStart="15dp"
                android:paddingTop="2dp"
                android:paddingEnd="15dp"
                android:paddingBottom="2dp"
                android:text="app rating"
                android:textColor="#937B00"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/appsize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/size_bg"
                android:gravity="center"
                android:paddingStart="15dp"
                android:paddingTop="2dp"
                android:paddingEnd="15dp"
                android:paddingBottom="2dp"
                android:text="app size"
                android:textColor="#008E7A"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/appcategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/category_bg"
                android:gravity="center"
                android:paddingStart="15dp"
                android:paddingTop="2dp"
                android:paddingEnd="15dp"
                android:paddingBottom="2dp"
                android:text="app category"
                android:textColor="#0B0191"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>

        <TextView
            android:id="@+id/adText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/apptitle"
            android:layout_marginStart="15dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/desc_bg"
            android:gravity="center"
            android:maxLines="5"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"
            android:text="App Descreption"
            android:textAlignment="center"
            android:textColor="#5D7381"
            android:textSize="@dimen/text_size_14"
            android:textStyle="normal" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/actbtns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="15dp"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/actionbtn"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="@dimen/interad_btn_height"
                android:layout_margin="5dp"
                android:background="@drawable/action_btn_card_bg"
                android:elevation="1dp"
                android:gravity="center" />

            <TextView
                android:id="@+id/btnactiontext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:clickable="false"
                android:elevation="1dp"
                android:gravity="center"
                android:text="install now"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_size_16" />

        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancelbtn"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="@dimen/interad_btn_height"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/cancle_btn_bg"
            android:elevation="1dp"
            android:gravity="center"
            android:text="@string/no_thanks"
            android:textColor="#444444"
            android:textSize="@dimen/text_size_14" />

    </LinearLayout>

</RelativeLayout>